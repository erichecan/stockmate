# StockFlow Backend Environment Configuration

# Neon PostgreSQL - Platform Database (pooler for queries)
DATABASE_URL="postgresql://user:password@host/neondb?sslmode=require"

# Neon PostgreSQL - Direct connection (for migrations)
DIRECT_DATABASE_URL="postgresql://user:password@host-direct/neondb?sslmode=require"

# JWT Configuration
JWT_ACCESS_SECRET="your-access-secret"
JWT_REFRESH_SECRET="your-refresh-secret"
JWT_ACCESS_EXPIRATION="15m"
JWT_REFRESH_EXPIRATION="7d"

# Application
PORT=3001
NODE_ENV=development

# Neon API (for creating tenant databases)
NEON_API_KEY=""
NEON_PROJECT_ID=""
